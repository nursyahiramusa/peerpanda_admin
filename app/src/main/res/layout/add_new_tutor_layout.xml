        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/programme"
            android:hint="Programme Code"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textColorHint="@color/blackTextColor"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/blackTextColor"
            android:inputType="textCapCharacters"
            app:met_baseColor="@color/blackTextColor"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="35"
            app:met_primaryColor="@color/blackTextColor"
            app:met_singleLineEllipsis="true"
            android:textAllCaps="true"
            android:layout_marginBottom="-17dp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/sem"
            android:hint="Semester"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textColorHint="@color/blackTextColor"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/blackTextColor"
            android:inputType="number"
            app:met_baseColor="@color/blackTextColor"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="1"
            app:met_primaryColor="@color/blackTextColor"
            app:met_singleLineEllipsis="true"
            android:layout_marginBottom="-17dp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>
