        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/courseTeach"
            android:hint="Course Code Teach"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textColorHint="@color/blackTextColor"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/blackTextColor"
            android:inputType="textCapCharacters"
            app:met_baseColor="@color/blackTextColor"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="6"
            app:met_primaryColor="@color/blackTextColor"
            app:met_singleLineEllipsis="true"
            android:textAllCaps="true"
            android:layout_marginBottom="-17dp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/courseName"
            android:hint="Course Name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textColorHint="@color/blackTextColor"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/blackTextColor"
            android:inputType="textCapWords"
            app:met_baseColor="@color/blackTextColor"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="35"
            app:met_primaryColor="@color/blackTextColor"
            app:met_singleLineEllipsis="true"
            android:layout_marginBottom="-17dp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/total_pay"
            android:hint="Price (RM)"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:textColorHint="@color/blackTextColor"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/blackTextColor"
            android:inputType="numberDecimal"
            app:met_baseColor="@color/blackTextColor"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="35"
            app:met_primaryColor="@color/blackTextColor"
            app:met_singleLineEllipsis="true"
            android:layout_marginBottom="-17dp"
            >
        </com.rengwuxian.materialedittext.MaterialEditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btnAdd"
            android:text="add"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/button_rectangle_yello"
            android:shadowColor="@color/black"
            android:layout_marginRight="10dp"
            >
        </Button>
        <Button
            android:id="@+id/btnCancel"
            android:text="cancel"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/button_rectangle_red"
            android:shadowColor="@color/black"
            android:layout_marginLeft="10dp"
            >
        </Button>
